<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Mybrary.Views.NNMBusyView" 
    xmlns:translation="clr-namespace:Mybrary.Core.Localization;assembly=Mybrary.Core"
    xmlns:uiconfig="clr-namespace:Mybrary.Sources.Extensions;assembly=Mybrary"
    >
	<ContentView.Content>
		<Grid x:Name="BusyGrid" BackgroundColor="#B3FFFFFF">
			<StackLayout x:Name="BusyStack" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Padding="20">
<!--				<Label x:Name="BusyLabel" Text="{translation:Translate BusyLabel}" TextColor="Gray" HorizontalOptions="Center" />-->
				<ActivityIndicator x:Name="BusyIndicator" Color="{x:Static uiconfig:UIConfig.MainAppColor}" />
			</StackLayout>
		</Grid>
	</ContentView.Content>
</ContentView>
